{
  "name": "@metrichor/cronkite",
  "version": "1.1.6",
  "repository": "https://github.com/nanoporetech/cronkite",
  "description": "Cronkite - Build dashboards and reports from datastreams",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/cronkite/cronkite.js",
  "files": [
    "dist/",
    "loader/",
    "dist/collection/cronkite.schema.json"
  ],
  "scripts": {
    "build": "stencil build",
    "build:docs": "npm run build --docs",
    "build:app": "npm run build --serve",
    "clean": "rm -rf dist www .stencil",
    "fix-css": "npm run lint-css --fix",
    "fix-ts": "npm run tslint:app --fix",
    "fix": "npm run fix-ts && npm run fix-css",
    "package:version": "for file in $(find . -type f -name package.json -not -path \"./node_modules/*\" -not -path \"./dist/*\" -not -path \"./loader/*\"); do jq \".version=(.version | split(\\\"-\\\") | .[0] | split(\\\".\\\") | [.[0], .[1], .[2]+\\\"-${PATCH:-`date +\"%-H%M\"`}\\\"] | join(\\\".\\\"))\" < $file > $file.tmp && mv $file.tmp $file; done",
    "lint-css": "stylelint \"src/**/*.{css,less,styl,scss,sass,sss}\"",
    "lint-ts": "npm run tslint:app",
    "lint:ts:app": "tslint --project tsconfig.json src/**/*.ts src/**/*.tsx",
    "lint": "npm run lint-ts && npm run lint-css",
    "start": "stencil build --dev --watch --serve",
    "test:watch": "stencil test --spec --e2e --watchAll",
    "test": "stencil test --spec --e2e",
    "tslint:app": "npm run tslint --project tsconfig.json --config tslint.json src/**/*.ts src/**/*.tsx",
    "tslint": "tslint --format stylish"
  },
  "devDependencies": {
    "@ionic/core": "5.1.0",
    "@stencil/core": "1.12.7",
    "@stencil/sass": "1.3.1",
    "@types/jest": "24.9.1",
    "@types/lodash": "4.14.150",
    "@types/puppeteer": "2.0.1",
    "@types/socket.io-client": "1.4.32",
    "@types/uuid": "7.0.3",
    "husky": "4.2.5",
    "jest": "24.9.0",
    "jest-cli": "24.9.0",
    "lint-staged": "10.2.2",
    "prettier": "2.0.5",
    "puppeteer": "2.1.1",
    "rollup-plugin-node-polyfills": "0.2.1",
    "stylelint": "13.3.3",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-no-indistinguishable-colors": "^1.3.0",
    "stylelint-order": "^4.0.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "3.17.2",
    "tslint": "6.1.2",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-ionic-rules": "^0.0.21",
    "tslint-plugin-cypress": "^1.0.4",
    "tslint-plugin-prettier": "2.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run fix-ts --fix",
      "git add --force"
    ],
    "*.{json,md,graphql}": [
      "prettier --write",
      "git add --force"
    ],
    "*.{css,less,styl,scss,sass,sss}": [
      "stylelint --fix",
      "git add --force"
    ]
  },
  "license": "MPL-2.0",
  "dependencies": {
    "@metrichor/ui-components": "1.0.1-3157558",
    "ajv": "6.12.2",
    "lodash": "4.17.15",
    "number-scale": "0.0.9",
    "socket.io-client": "2.3.0",
    "superstruct": "0.8.3",
    "uuid": "8.0.0"
  }
}
